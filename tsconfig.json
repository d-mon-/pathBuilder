{
    "compilerOptions": {
        "target": "es5", // ie11+
        "module": "es2015",
        "lib": ["es5", "dom", "es2015.collection"],
        "removeComments": true,
        "sourceMap": true,
        "sourceRoot": "./src/",
        "rootDir": "./src/",
        "declaration": true,
        "outDir": "dist",
        "alwaysStrict": true,
        "strict": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "__tests__/"
    ]
}